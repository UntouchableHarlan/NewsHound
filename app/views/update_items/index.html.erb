<p id="notice"><%= notice %></p>

<h1>Update Items</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Updatedate</th>
      <th>Titletext</th>
      <th>Maintext</th>
      <th>Redirectionurl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @update_items.each do |update_item| %>
      <tr>
        <td><%= update_item.uid %></td>
        <td><%= update_item.updateDate %></td>
        <td><%= update_item.titleText %></td>
        <td><%= update_item.mainText %></td>
        <td><%= update_item.redirectionUrl %></td>
        <td><%= link_to 'Show', update_item %></td>
        <td><%= link_to 'Edit', edit_update_item_path(update_item) %></td>
        <td><%= link_to 'Destroy', update_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Update Item', new_update_item_path %>
